<div class="loading-page">
    <span class="loader"></span>
    <div id="loading-frase">
        <p class="loading-frase-frase"></p>
        <p class="loading-frase-titulo"></p>
    </div>
</div>

<style>
    .loading-page {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: var(--yellow);
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .loading-page_animation {
        animation: splash .3s ease-in forwards;
    }

    .loading-page.loading-page_animation #loading-frase,
    .loading-page.loading-page_animation .loader {
        display: none;
    }

    .loader {
        width: 48px;
        height: 48px;
        display: inline-block;
        position: relative;
    }

    .loader::after,
    .loader::before {
        content: '';  
        box-sizing: border-box;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        border: 2px solid #FFF;
        position: absolute;
        left: 0;
        top: 0;
        animation: animloader 2s linear infinite;
    }

    .loader::after {
        animation-delay: 1s;
    }

    #loading-frase {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 1.5rem;
        padding: 0 1.5rem;
    }

    #loading-frase p {
        margin-bottom: 0.25rem;
    }

    #loading-frase p.loading-frase-frase {
        font-weight: 900;
        font-size: 1rem;
        text-align: center;
    }

    #loading-frase p.loading-frase-titulo {
        font-size: 0.85rem;
        font-family: 'Albert Sans', sans-serif;
    }

    @keyframes animloader {
        0% {
            transform: scale(0);
            opacity: 1;
        }
        100% {
            transform: scale(1);
            opacity: 0;
        }
    }

    @keyframes splash {
        to {
            height: 60%;
        }
    }
</style>