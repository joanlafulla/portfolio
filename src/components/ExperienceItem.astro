---
import Badge from '../components/Badge.astro';
const { title } = Astro.props;
const { subtitle } = Astro.props;
const { body } = Astro.props;
const { date } = Astro.props;
const {class: className, ...rest} = Astro.props;
---

<div class:list={['myExperience', className]} {...rest}>
    {title && <h2>{title}</h2>} <!--render title if it exists -->
    {subtitle && <h3>{subtitle}</h3>}
    <p set:html={body} /> <!--can add html tags on text -->
    <Badge badgeBG="var(--gold)">{date}</Badge>
</div>

<style>
    .myExperience.myExperience-vertical {
        display: flex;
        flex-direction: column;
        margin-bottom: 3rem;
    }

    .myExperience h2 {
        font-size: clamp(1.5rem, 0.786rem + 1.905vw, 2.5rem);
        font-family: 'Albert Sans', serif;
        font-weight: 900;
        color: var(--text);
        margin-bottom: 0.5rem;
    }

    .myExperience h3 {
        font-size: 1rem;
        font-family: 'Albert Sans', serif;
        color: var(--brown);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 0.075rem;
    }

    .myExperience p {
        font-size: clamp(1rem, 0.911rem + 0.238vw, 1.125rem);
        font-weight: 400;
        font-family: 'Albert Sans', serif;
        line-height: 1.5;
        color: var(--text);
    }

    .myExperience-date {
        font-size: 0.875rem;
        color: var(--dark-gray);
    }

    .myExperience-horizontal {
        display: flex;
        flex-direction: row;
        gap: 1.5rem;
        align-items: center;
        justify-content: space-between;
    }
</style>