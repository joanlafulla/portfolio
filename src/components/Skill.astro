---
const { title, body, rate} = Astro.props;
---
<div class="skill">
    <div class="skill-avatar-group">
        <slot />
        <!-- <Avatar 
		alt="Detalle del buscador de la App de Fotocasa"
		imagePath={ src }
			>
        </Avatar> -->
    </div>
    <div class="skill-content">
        <div class="skill-content-text">
            <h1>{ title} </h1>
            <p>{ body }</p>
        </div>
        <span class="skill-rate" data-rate = {rate}>{ rate }</span>
    </div> 
</div>

<style>
    .skill {
        display: grid;
        grid-template-rows: subgrid;
        grid-row: span 2;
        background: linear-gradient(90deg,rgba(255, 255, 255, 1) 0%, rgba(248, 248, 248, 1) 100%);
        padding: 2rem 1.5rem;
        border-radius: 1.5rem;
        gap: 1.5rem;
        box-shadow: 0px 10px 32px -3px rgba(0,0,0,0.050);
    }

    .skill-content {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 2rem;
        position: relative;
    }

    .skill-avatar-group {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: start;
    }

    .skill-content-text {
        width: calc(100% - 90px);
    }

    .skill-content-text h1 {
        font-size: clamp(1.2rem, 0.986rem + 0.571vw, 1.5rem);
        font-family: 'Albert Sans', sans-serif;
        color: var(--text);
        text-transform: uppercase;
    }

    .skill-content-text p {
        font-size: 1.125rem;
        font-family: 'Albert Sans', sans-serif;
        color: var(--gray);
        font-weight: 400;
        margin-top: .75rem;
        margin-bottom: 0;
        padding-right: 1rem;
    }

    .skill-rate {
        font-size: 2.625rem;
        font-weight: 900;
        font-family: 'Albert Sans', sans-serif;
        height: auto;
        display: inline-block;
        width: fit-content;
        position: absolute;
        bottom: 0;
        right: 0;
    }
    
    .skill-avatar-group :global(.avatar:not(:first-child)) {
        margin-left: -1.5rem;
    }
</style>