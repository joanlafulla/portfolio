---
import '../../styles/global.css';

import { useTranslations } from '../../i18n/utils';
import { languageList } from '../../i18n/ui';
const currentLang = Astro.currentLocale || 'es';
const translateLabels = useTranslations(currentLang as keyof typeof languageList);

import { getRelativeLocaleUrl } from 'astro:i18n';

import Layout from '../../layouts/Layout.astro';
import Header from '../../layouts/Header_trayecto.astro';
import Topbar from '../../components/Topbar.astro';
import Loading from '../../components/Loading.astro';
import ItemProduct from '../../components/ItemProduct.astro';
import Main from '../../layouts/Main.astro';

import trayecto_1_large from '../../assets/trayecto/trayecto_1_large.png';
import trayecto_2_large from '../../assets/trayecto/trayecto_2_large.png';
import trayecto_2_small from '../../assets/trayecto/trayecto_2_small.png';
import trayecto_3_large from '../../assets/trayecto/trayecto_3_large.png';
import trayecto_4_large from '../../assets/trayecto/trayecto_4_large.png';
import trayecto_4_small from '../../assets/trayecto/trayecto_4_small.png';
import Footer2 from '../../layouts/Footer2.astro';


const pageTitle = 'Exploring travel time search on Fotocasa';
const pageDescription = 'The new route search feature allows Fotocasa users to obtain results based on a point of interest (an address), a mode of transportation (walking, driving, public transportation, etc.), and a travel time (from 10 to 60 minutes).';
const pageKeywords = 'UX, UI, Fotocasa, html, css, javascript, blog, cine';
const pageAuthor = 'Joan Lafulla';
---

<Layout title={pageTitle} description={pageDescription} keywords={pageKeywords} author={pageAuthor} class="overflow-x-hidden">
	<Loading />
	<Topbar cluePosition="20%" />
    <Header/>
	<Main>
        
            <div class="trayecto_contenedor_2">
                <div class="trayecto_content_2">
                    <ItemProduct
                    title={translateLabels('trayecto.row2.title')}
                    description={translateLabels('trayecto.row2.body')}
                    class="row-2"
                    imgWidth="50%"
                    imgWidthMobile="45%"
                    flexDirection="row"
                    textAlign="left"
                    colorText="var(--text)"
                    justifyImages="center"
                    textDirection="column">
                    <img src={trayecto_1_large.src} alt="La búsqueda por tiempo de trayecto como nueva forma de búsqueda en Fotocasa" class="img-large-isolate" />
                    <picture>
                        <source media="(max-width: 680px)" srcset={trayecto_2_small.src}>
                        <img src={trayecto_2_large.src} alt="Pantalla en la que se muestra la búsqueda por tiempo de trayecto"  class="img-large-picture"/>
                    </picture>
                    </ItemProduct>
                </div>
            </div>
           <div class="trayecto_contenedor_3">
                <div class="trayecto_content_3">
                    <ItemProduct
                    title={translateLabels('trayecto.row3.title')}
                    description={translateLabels('trayecto.row3.body')}
                    class="row-3"
                    imgWidth="50%"
                    imgWidthMobile="45%"
                    flexDirection="row-reverse"
                    textAlign="left"
                    colorText="var(--text)"
                    justifyImages="center"
                    textDirection="column">
                    <picture>
                        <source media="(max-width: 680px)" srcset={trayecto_4_small.src}>
                        <img src={trayecto_4_large.src} alt="Pantalla en la que se muestra una opción de doble búsqueda por trayecto"  class="img-large-picture"/>
                    </picture>
                    <img src={trayecto_3_large.src} alt="Resultado de una doble búsqueda por tiempo de trayecto" class="img-large-isolate" />
                    </ItemProduct>
                </div>
            </div>
    </Main>
    <Footer2
		bgColor="var(--dark-brown)",
		textColor="var(--yellow)",
        barraColor="var(--yellow)",
		template= "yellow"
	/>
</Layout>

<style>
    .trayecto_content_2,
    .trayecto_content_3 {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
        z-index: 100;
        position: relative;
    }

    .trayecto_contenedor_2,
    .trayecto_contenedor_3 {
        background-color: var(--yellow);
        position: relative;
    }

    .item-product.row-2 {
        margin: 0;
    }

    .item-product.row-3 {
        margin-bottom: 12rem;
    }

    .item-product-text {
        color: var(--yellow);
    }

    .img-large-extra {
        width: auto;
        max-width: 1200px;
        height: auto;
        border-radius: 3.125rem;
        box-shadow: 0px 10px 16px -3px rgba(0,0,0,0.1);
        border: 1rem solid var(--yellow);
        object-fit: cover;
        position: relative;
        background: white;
    }

    .img-large-isolate,
    .img-large-picture {
        width: auto;
        height: auto;
        border-radius: 3.125rem;
        box-shadow: 0px 10px 16px -3px rgba(0,0,0,0.1);
        border: 1rem solid var(--white);
        object-fit: cover;
        position: relative;
        background: white;
    }

    .row-2 .img-large-isolate {
        top: 4rem;
        left: 2.5rem;
        max-width: 282px;
    }

    .row-2 .img-large-picture {
        top: -4rem;
        right: 2.5rem;
        max-width: 282px;
    }

    .row-3 .img-large-isolate {
        top: 8rem;
        max-width: 282px;
        right: 12%;
    }

    .row-3 .img-large-picture {
        max-width: 282px;
        left: 3%;
    }

    .bigplus {
        position: absolute;
        top: -7%;
        right: -3%;
        max-width: 450px;
        height: auto;
        z-index: 200;
        animation-name: rotarBigPlus;
        animation-duration: 1.5s;
        animation-timing-function: cubic-bezier(0.215, 0.610, 0.355, 1.000);
        animation-iteration-count: infinite;
        animation-direction: alternate;
    }

    @keyframes rotarBigPlus {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        } 
    }

    @media (max-width: 1100px) {
        .row-2 .img-large-isolate {
            display: none;
        }

        .row-2 .img-large-picture {
            top: 0;
            right: 0;
        }

        .row-3 .img-large-isolate {
            display: none;
        }

        .row-3 .img-large-picture {
            top: 0;
            right: 0;
            left: 0;
        }

        .img-large-extra {
            max-width: 800px;
        }

        .item-product,
        .item-product.row-2  {
            margin: 1.5rem 0;
        }

        .bigplus {
            top: -7%;
            right: -3%;
            max-width: 300px;
        }
    }

    @media (max-width: 680px) {

        .item-product {
            flex-direction: column-reverse;
            gap: 2.5rem;
        }

        .img-large-extra {
            max-width: 282px;
            width: 100%;
            height: auto;
        }

        .item-product-text {
            flex-direction: column !important
        }

        .apps_fotocasa_contenedor .item-product:first-child {
            margin: 0;
        }

        .item-product.row-3 {
            margin-bottom: 6rem;
        }
    }

    @media (max-width: 524px) {
        .bigplus {
            top: -5%;
            right: -30%;
            max-width: 250px;
        }
    }
</style>

<script>
// Selecciona el elemento al que quieres añadir el estilo
const myFooter = document.querySelector('footer');

window.addEventListener('scroll', () => {
  // Calcula la posición actual del scroll
  const scrollTop = window.scrollY || document.documentElement.scrollTop;
  // Obtiene la altura total del documento
  const alturaTotal = document.documentElement.scrollHeight - window.innerHeight;
  // Calcula el porcentaje de scroll
  const porcentajeScroll = (scrollTop / alturaTotal) * 100;

  if (porcentajeScroll >= 50) {
    // Añade un estilo, por ejemplo, una clase
    if(myFooter) {
        myFooter.style.opacity='1';
    }
    } else {
    // Opcional: quita la clase si el scroll es menor al 50%
    if(myFooter) {
        myFooter.style.opacity='0';
    }
    
  }
});
</script>